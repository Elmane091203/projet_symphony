{% extends 'base.html.twig' %}

{% block title %}Détails du Point{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails du point</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ point.nom }}</h5>
                <p class="card-text"><strong>Zone :</strong> {{ point.zone.nom }}</p>
                <p class="card-text"><strong>Nombre d'habitants :</strong> {{ point.nbHabitants }}</p>
                <p class="card-text"><strong>Cas symptomatiques :</strong> {{ point.nbSymptomatiques }}</p>
                <p class="card-text"><strong>Cas positifs :</strong> {{ point.nbPositifs }}</p>
                <p class="card-text">
                    <strong>Pourcentage de cas positifs :</strong>
                    {% set pourcentage = (point.nbPositifs / point.nbHabitants) * 100 %}
                    {{ pourcentage|number_format(2) }}%
                </p>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_point_edit', {'id': point.id}) }}" class="btn btn-warning">Modifier</a>
            <a href="{{ path('app_point_index') }}" class="btn btn-secondary">Retour</a>
        </div>
    </div>
{% endblock %} 